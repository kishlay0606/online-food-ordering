<% layout('layout') -%>
<section class="ftco-section ftco-cart" style="padding-top: 150px;">
    <% if(message.length>0) { %>
    <div class="alert alert-dark alert-dismissable" style="margin-left: 20%; margin-right:20%;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <%= message %>
    </div>
    <% } %>

    <form method="POST" enctype="multipart/form-data" style="margin-left: 20%; margin-right:20%;">
        <h1>Add Product</h1>
        <div class="form-group">
            <label="name">Name: </label>
                <input type="text" class="form-control text-left pl-2" name="name">
        </div>
        <div class="form-group">
                <label="category">Category: </label>
            <select class="custom-select mt-2" id="inputGroupSelect01" name="category" style="text-transform: capitalize;">
                <% for(var i=0; i < categories.length; i++){ %>
                <option value="<%= categories[i]._id %>" style="text-transform: capitalize;"><%= categories[i].name %></option>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label="price">Price: </label>
                <input type="number" class="form-control text-left pl-2" name="price">
        </div>
        <div class="form-group">
            <label="price">Description: </label>
                <textarea type="number" class="form-control text-left pl-2" name="description" rows="3"></textarea>
        </div>
        <div class="form-group">
            <input type="file" name="upfile" value="">
        </div>
        <p class="text-left"><a href="javascript:$('form').submit();" class="btn btn-primary py-3 px-4">Submit</a>
        </p>
    </form>
</section>